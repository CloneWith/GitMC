<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="GitMC.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GitMC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <NavigationView x:Name="NavView"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="True"
                        PaneDisplayMode="Left">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Home" Icon="Home" Tag="Home" />
                <NavigationViewItemSeparator />
                <NavigationViewItemHeader Content="Managed Saves" />
                <!-- Saves will be populated here -->
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource TitleTextBlockStyle}" Text="Welcome to GitMC" />
                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}" Text="Select a Minecraft save to start versioning." />
                    <Button x:Name="SelectSaveButton"
                            HorizontalAlignment="Center"
                            Click="SelectSaveButton_Click"
                            Content="Select a save directory"
                            Style="{StaticResource AccentButtonStyle}" />
                </StackPanel>
            </Frame>
        </NavigationView>
    </Grid>
</Page>
