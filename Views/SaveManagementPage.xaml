<Page
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    FontFamily="{StaticResource AppFontFamily}"
    UseLayoutRounding="True"
    mc:Ignorable="d"
    x:Class="GitMC.Views.SaveManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GitMC.Models"
    xmlns:viewModels="using:GitMC.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Resources>

        <!--  Save Card GridView Item Style  -->
        <Style TargetType="GridViewItem" x:Key="SaveCardGridViewItemStyle">
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
        </Style>

        <!--  Save Card Data Template  -->
        <DataTemplate x:DataType="models:ManagedSaveInfo" x:Key="SaveCardTemplate">
            <Border
                Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1"
                CornerRadius="12"
                HorizontalAlignment="Stretch"
                Margin="0,0,0,12"
                Padding="16"
                UseLayoutRounding="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Header Row: Icon, Title, Status Badge, and Action Button  -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Folder Icon Container  -->
                        <Border
                            Background="{x:Bind FolderIconBackground}"
                            BorderBrush="{x:Bind FolderIconBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Grid.Column="0"
                            Height="40"
                            Margin="0,0,12,0"
                            VerticalAlignment="Center"
                            Width="40">
                            <FontIcon
                                FontSize="18"
                                Foreground="{x:Bind FolderIconForeground}"
                                Glyph="&#xE8B7;"
                                HorizontalAlignment="Center"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center" />
                        </Border>

                        <!--  Title and Path  -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="0,0,0,4"
                                Text="{x:Bind Name}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                UseLayoutRounding="True" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                Text="{x:Bind OriginalPath}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                UseLayoutRounding="True" />
                        </StackPanel>

                        <!--  Status Badge  -->
                        <Border
                            Background="{x:Bind StatusBadgeBackground}"
                            BorderBrush="{x:Bind StatusBadgeBorder}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Grid.Column="2"
                            Height="Auto"
                            Margin="8,0,8,0"
                            Padding="8,4"
                            UseLayoutRounding="True"
                            VerticalAlignment="Center">
                            <TextBlock
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="{x:Bind StatusBadgeText}"
                                Text="{x:Bind StatusText}"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center" />
                        </Border>

                        <!--  Open Button  -->
                        <Button
                            Click="OpenSave_Click"
                            Content="Open"
                            Grid.Column="3"
                            Height="32"
                            MinWidth="60"
                            Style="{StaticResource AccentButtonStyle}"
                            Tag="{x:Bind}"
                            UseLayoutRounding="True"
                            VerticalAlignment="Center" />
                    </Grid>

                    <!--  Information Row  -->
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Branch Info  -->
                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                            <ImageIcon
                                Foreground="{x:Bind InfoIconColor}"
                                Height="16"
                                Margin="0,0,8,0"
                                Source="../Assets/Icons/branch_grey.svg"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center"
                                Width="16" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{x:Bind InfoTextColor}"
                                    Margin="0,0,0,2"
                                    Text="Branch"
                                    UseLayoutRounding="True" />
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="main"
                                    UseLayoutRounding="True" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Size Info  -->
                        <StackPanel
                            Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                            <ImageIcon
                                Foreground="{x:Bind InfoIconColor}"
                                Height="16"
                                Margin="0,0,8,0"
                                Source="../Assets/Icons/db_grey.svg"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center"
                                Width="16" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{x:Bind InfoTextColor}"
                                    Margin="0,0,0,2"
                                    Text="Size"
                                    UseLayoutRounding="True" />
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind SizeFormatted}"
                                    UseLayoutRounding="True" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Commits Info  -->
                        <StackPanel
                            Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                            <ImageIcon
                                Foreground="{x:Bind InfoIconColor}"
                                Height="16"
                                Margin="0,0,8,0"
                                Source="../Assets/Icons/commit_grey.svg"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center"
                                Width="16" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{x:Bind InfoTextColor}"
                                    Margin="0,0,0,2"
                                    Text="Commits"
                                    UseLayoutRounding="True" />
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="45"
                                    UseLayoutRounding="True" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Modified Info  -->
                        <StackPanel
                            Grid.Column="3"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                            <FontIcon
                                FontSize="16"
                                Foreground="{x:Bind InfoIconColor}"
                                Glyph="&#xE823;"
                                Margin="0,0,8,0"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{x:Bind InfoTextColor}"
                                    Margin="0,0,0,2"
                                    Text="Modified"
                                    UseLayoutRounding="True" />
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind LastModifiedFormatted}"
                                    UseLayoutRounding="True" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!--  Separator  -->
                    <Border
                        Background="{x:Bind SeparatorBackground}"
                        Grid.Row="2"
                        Height="1"
                        Margin="0,0,0,16" />

                    <!--  Git Status Row  -->
                    <StackPanel
                        Grid.Row="3"
                        Orientation="Horizontal"
                        Spacing="12">
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Git Status:"
                            UseLayoutRounding="True" />

                        <!--  Git Status Badges - Show Different Content Based on State  -->
                        <!--  If no pending actions, show status text  -->
                        <TextBlock
                            FontSize="12"
                            Text="{x:Bind GitStatusDescription}"
                            UseLayoutRounding="True"
                            VerticalAlignment="Center"
                            Visibility="{x:Bind ShowStatusTextOnly}" />

                        <!--  Push Status Badge - Show if has pending pushes  -->
                        <Border
                            Background="{ThemeResource SystemAccentColor}"
                            CornerRadius="8"
                            Padding="8,4"
                            UseLayoutRounding="True"
                            Visibility="{x:Bind ShowPushBadge}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <FontIcon
                                    FontSize="10"
                                    Foreground="White"
                                    Glyph="&#xE898;"
                                    Margin="0,0,4,0"
                                    UseLayoutRounding="True"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    FontSize="10"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="{x:Bind PushStatusText}"
                                    UseLayoutRounding="True"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>

                        <!--  Pull Status Badge - Show if has pending pulls  -->
                        <Border
                            Background="{ThemeResource SystemAccentColor}"
                            CornerRadius="8"
                            Padding="8,4"
                            UseLayoutRounding="True"
                            Visibility="{x:Bind ShowPullBadge}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <FontIcon
                                    FontSize="10"
                                    Foreground="White"
                                    Glyph="&#xE896;"
                                    Margin="0,0,4,0"
                                    UseLayoutRounding="True"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    FontSize="10"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="{x:Bind PullStatusText}"
                                    UseLayoutRounding="True"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>

                        <!--  Conflict Status Badge - Show if has conflicts  -->
                        <Border
                            Background="{x:Bind ConflictBadgeBackground}"
                            CornerRadius="8"
                            Padding="8,4"
                            UseLayoutRounding="True"
                            Visibility="{x:Bind ShowConflictBadge}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <FontIcon
                                    FontSize="10"
                                    Foreground="{x:Bind ConflictBadgeText}"
                                    Glyph="&#xE783;"
                                    Margin="0,0,4,0"
                                    UseLayoutRounding="True"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    FontSize="10"
                                    FontWeight="SemiBold"
                                    Foreground="{x:Bind ConflictBadgeText}"
                                    Text="{x:Bind ConflictStatusText}"
                                    UseLayoutRounding="True"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Status Bar  -->
        <Border
            Background="White"
            BorderBrush="#E1E1E1"
            BorderThickness="1"
            CornerRadius="8"
            Grid.Row="0"
            Margin="24,24,24,16"
            Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Title  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Dashboard"
                        VerticalAlignment="Center" />
                </StackPanel>

                <!--  Project Status Stats  -->
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="32">
                    <!--  Total Saves  -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Background="#E3F2FD"
                            CornerRadius="16"
                            Height="32"
                            VerticalAlignment="Center"
                            Width="32">
                            <FontIcon
                                FontSize="16"
                                Foreground="#1976D2"
                                Glyph="&#xE8B7;"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{x:Bind ViewModel.TotalSavesCount}"
                                x:Name="TotalSavesCount" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Saves" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Saves with Changes  -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Background="#FFF3E0"
                            CornerRadius="16"
                            Height="32"
                            VerticalAlignment="Center"
                            Width="32">
                            <FontIcon
                                FontSize="16"
                                Foreground="#F57C00"
                                Glyph="&#xE70F;"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{x:Bind ViewModel.SavesWithChangesCount}"
                                x:Name="SavesWithChangesCount" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Changed" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Remote Updates  -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Background="#E8F5E8"
                            CornerRadius="16"
                            Height="32"
                            VerticalAlignment="Center"
                            Width="32">
                            <FontIcon
                                FontSize="16"
                                Foreground="#388E3C"
                                Glyph="&#xE896;"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{x:Bind ViewModel.RemoteUpdatesCount}"
                                x:Name="RemoteUpdatesCount" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Updates" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Git Status  -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Background="#F3E5F5"
                            CornerRadius="16"
                            Height="32"
                            VerticalAlignment="Center"
                            Width="32">
                            <FontIcon
                                FontSize="16"
                                Foreground="#7B1FA2"
                                Glyph="&#xE774;"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{x:Bind ViewModel.GitStatusText}"
                                x:Name="GitStatusText" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Git Status" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Total Size  -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Background="#FCE4EC"
                            CornerRadius="16"
                            Height="32"
                            VerticalAlignment="Center"
                            Width="32">
                            <ImageIcon
                                Height="16"
                                HorizontalAlignment="Center"
                                Source="../Assets/Icons/db.svg"
                                VerticalAlignment="Center"
                                Width="16" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{x:Bind ViewModel.TotalSizeText}"
                                x:Name="TotalSizeText" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Total Size" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!--  Add Save Button  -->
                <Button
                    Click="AddSaveButton_Click"
                    Grid.Column="2"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="14" Glyph="&#xE710;" />
                        <TextBlock Text="Add Save" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!--  Main Content Layout  -->
        <Grid Grid.Row="1" Margin="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="320" />
            </Grid.ColumnDefinitions>

            <!--  Left Panel - Your Saves  -->
            <Border
                Background="White"
                BorderBrush="#E1E1E1"
                BorderThickness="1"
                CornerRadius="12"
                Grid.Column="0"
                Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Header with Actions  -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <FontIcon
                                FontSize="18"
                                Glyph="&#xE8B7;"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Your Saves"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button Click="SyncAllButton_Click" ToolTipService.ToolTip="Sync All Saves">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon FontSize="12" Glyph="&#xE895;" />
                                    <TextBlock FontSize="12" Text="Sync All" />
                                </StackPanel>
                            </Button>
                            <Button Click="PushAllButton_Click" ToolTipService.ToolTip="Push All Changes">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon FontSize="12" Glyph="&#xE898;" />
                                    <TextBlock FontSize="12" Text="Push All" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--  Save Count Info  -->
                    <TextBlock
                        FontSize="14"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Grid.Row="1"
                        Margin="0,0,0,16"
                        Text="No saves managed yet"
                        Visibility="{x:Bind ViewModel.HasNoSaves}"
                        x:Name="SaveCountInfo" />

                    <!--  Saves Grid  -->
                    <ScrollViewer
                        Grid.Row="2"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto">
                        <GridView
                            HorizontalContentAlignment="Stretch"
                            ItemContainerStyle="{StaticResource SaveCardGridViewItemStyle}"
                            ItemTemplate="{StaticResource SaveCardTemplate}"
                            ItemsSource="{x:Bind ViewModel.ManagedSaves}"
                            SelectionMode="None"
                            x:Name="SavesGridView">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!--  Right Sidebar - Quick Actions & Recent Activity  -->
            <Grid Grid.Column="2">
                <ScrollViewer
                    HorizontalScrollBarVisibility="Disabled"
                    Padding="0,0,8,0"
                    VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="16" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Quick Actions Panel  -->
                        <Border
                            Background="White"
                            BorderBrush="#E1E1E1"
                            BorderThickness="1"
                            CornerRadius="12"
                            Grid.Row="0"
                            Padding="20">
                            <StackPanel>
                                <!--  Quick Actions Header  -->
                                <StackPanel Margin="0,0,0,16" Orientation="Horizontal">
                                    <FontIcon
                                        FontSize="16"
                                        Glyph="&#xE945;"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center" />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Quick Actions"
                                        VerticalAlignment="Center" />
                                </StackPanel>

                                <!--  Action Buttons  -->
                                <StackPanel Spacing="8">
                                    <Button
                                        Click="CommitAllButton_Click"
                                        Height="60"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Padding="12,0,0,0"
                                        x:Name="CommitAllButton">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            Margin="16,0,12,0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                            <ImageIcon
                                                Height="16"
                                                Margin="0,0,12,0"
                                                Source="../Assets/Icons/commit.svg"
                                                VerticalAlignment="Center"
                                                Width="16" />
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Text="Commit All Changes" />
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Margin="0,2,0,0"
                                                    Text="Save current changes to Git" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>

                                    <Button
                                        Click="FetchAllButton_Click"
                                        Height="60"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Padding="12,0,0,0"
                                        x:Name="FetchAllButton">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            Margin="16,0,12,0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                            <FontIcon
                                                FontSize="16"
                                                Glyph="&#xE895;"
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center" />
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Text="Fetch All Changes" />
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Margin="0,2,0,0"
                                                    Text="Check updates from remote repo" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>

                                    <Button
                                        Click="PullAllButton_Click"
                                        Height="60"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Padding="12,0,0,0"
                                        x:Name="PullAllButton">
                                        <Grid>
                                            <StackPanel
                                                HorizontalAlignment="Left"
                                                Margin="16,0,12,0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                                <FontIcon
                                                    FontSize="16"
                                                    Glyph="&#xE896;"
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Center" />
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Pull All Changes" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                        Margin="0,2,0,0"
                                                        Text="Apply updates from remote repo" />
                                                </StackPanel>
                                            </StackPanel>
                                            <Border
                                                Background="#FF6B6B"
                                                CornerRadius="10"
                                                Height="20"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,16,0"
                                                MinWidth="20"
                                                VerticalAlignment="Center"
                                                Visibility="Collapsed"
                                                x:Name="PullBadge">
                                                <TextBlock
                                                    FontSize="10"
                                                    Foreground="White"
                                                    HorizontalAlignment="Center"
                                                    Text="0"
                                                    VerticalAlignment="Center"
                                                    x:Name="PullBadgeText" />
                                            </Border>
                                        </Grid>
                                    </Button>

                                    <Button
                                        Click="PushAllButton_Click"
                                        Height="60"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Padding="12,0,0,0"
                                        x:Name="PushAllButtonSidebar">
                                        <Grid>
                                            <StackPanel
                                                HorizontalAlignment="Left"
                                                Margin="16,0,12,0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                                <FontIcon
                                                    FontSize="16"
                                                    Glyph="&#xE898;"
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Center" />
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Push All Changes" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                        Margin="0,2,0,0"
                                                        Text="Upload local commits to remote" />
                                                </StackPanel>
                                            </StackPanel>
                                            <Border
                                                Background="#4CAF50"
                                                CornerRadius="10"
                                                Height="20"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,16,0"
                                                MinWidth="20"
                                                VerticalAlignment="Center"
                                                Visibility="Collapsed"
                                                x:Name="PushBadge">
                                                <TextBlock
                                                    FontSize="10"
                                                    Foreground="White"
                                                    HorizontalAlignment="Center"
                                                    Text="0"
                                                    VerticalAlignment="Center"
                                                    x:Name="PushBadgeText" />
                                            </Border>
                                        </Grid>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!--  Recent Activity Panel  -->
                        <Border
                            Background="White"
                            BorderBrush="#E1E1E1"
                            BorderThickness="1"
                            CornerRadius="12"
                            Grid.Row="2"
                            Padding="20">
                            <StackPanel>
                                <!--  Recent Activity Header  -->
                                <StackPanel Margin="0,0,0,16" Orientation="Horizontal">
                                    <FontIcon
                                        FontSize="16"
                                        Glyph="&#xE823;"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center" />
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Recent Activity"
                                        VerticalAlignment="Center" />
                                </StackPanel>

                                <!--  Activity List  -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel Spacing="10" x:Name="RecentActivityContainer">
                                        <!--  Activity items will be populated dynamically  -->
                                        <TextBlock
                                            FontSize="13"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            HorizontalAlignment="Center"
                                            Margin="0,20,0,0"
                                            Text="No recent activity"
                                            x:Name="NoActivityText" />
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!--  Loading Panel  -->
        <Grid
            Background="#80000000"
            Grid.RowSpan="2"
            Visibility="{x:Bind ViewModel.IsLoading}"
            x:Name="LoadingPanel">
            <Border
                Background="White"
                CornerRadius="8"
                Height="120"
                HorizontalAlignment="Center"
                Padding="24"
                VerticalAlignment="Center"
                Width="300">
                <StackPanel HorizontalAlignment="Center" Spacing="16">
                    <ProgressBar IsIndeterminate="True" x:Name="LoadingProgressRing" />
                    <TextBlock
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Text="Loading..." />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
