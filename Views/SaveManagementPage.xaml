<Page
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    FontFamily="{StaticResource AppFontFamily}"
    mc:Ignorable="d"
    x:Class="GitMC.Views.SaveManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converters="using:GitMC.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GitMC.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Resources>
        <converters:LocalizationConverter x:Key="LocalizationConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Status Bar  -->
        <Border
            Background="White"
            BorderBrush="#E1E1E1"
            BorderThickness="1"
            CornerRadius="8"
            Grid.Row="0"
            Margin="24,24,24,16"
            Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Title  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <FontIcon
                        FontSize="20"
                        Glyph="&#xE8FD;"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Save Management Dashboard"
                        VerticalAlignment="Center" />
                </StackPanel>

                <!--  Stats  -->
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="32">
                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Text="3"
                            x:Name="TotalSavesCount" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                            Text="Total Saves" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Text="2"
                            x:Name="GitInitializedCount" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                            Text="Git Initialized" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Text="1.2 GB"
                            x:Name="TotalSizeText" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                            Text="Total Size" />
                    </StackPanel>
                </StackPanel>

                <!--  Settings Button  -->
                <Button
                    Click="SettingsButton_Click"
                    Grid.Column="2"
                    ToolTipService.ToolTip="Settings">
                    <FontIcon
                        FontSize="16"
                        Glyph="&#xE713;" />
                </Button>
            </Grid>
        </Border>

        <!--  Main Content  -->
        <Grid Grid.Row="1" Margin="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!--  Left Panel - Your Saves  -->
            <Border
                Background="White"
                BorderBrush="#E1E1E1"
                BorderThickness="1"
                CornerRadius="12"
                Grid.Column="0"
                Padding="24">
                <StackPanel>
                    <!--  Header  -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <FontIcon
                                FontSize="18"
                                Glyph="&#xE8B7;"
                                Margin="0,0,12,0" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Your Saves" />
                        </StackPanel>

                        <Button
                            Click="AddSaveButton_Click"
                            Grid.Column="1"
                            Style="{StaticResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="14" Glyph="&#xE710;" />
                                <TextBlock Text="Add Save" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!--  Saves List  -->
                    <ScrollViewer>
                        <StackPanel Spacing="12" x:Name="SavesContainer">
                            <!--  Sample Save Cards  -->
                            <Border
                                Background="#FAFAFA"
                                BorderBrush="#E1E1E1"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  World Icon  -->
                                    <Border
                                        Background="#4A90E2"
                                        CornerRadius="6"
                                        Grid.Column="0"
                                        Height="40"
                                        Width="40">
                                        <TextBlock
                                            FontSize="20"
                                            HorizontalAlignment="Center"
                                            Text="🌍"
                                            VerticalAlignment="Center" />
                                    </Border>

                                    <!--  Save Info  -->
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="My Survival World" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="Last played: 2 hours ago • 245 MB • Git initialized" />
                                    </StackPanel>

                                    <!--  Actions  -->
                                    <Button
                                        Grid.Column="2">
                                        <FontIcon FontSize="14" Glyph="&#xE712;" />
                                    </Button>
                                </Grid>
                            </Border>

                            <!--  More sample saves...  -->
                            <Border
                                Background="#FAFAFA"
                                BorderBrush="#E1E1E1"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Background="#E2A04A"
                                        CornerRadius="6"
                                        Grid.Column="0"
                                        Height="40"
                                        Width="40">
                                        <TextBlock
                                            FontSize="20"
                                            HorizontalAlignment="Center"
                                            Text="🎨"
                                            VerticalAlignment="Center" />
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="Creative Building" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="Last played: 1 day ago • 89 MB • Not synced" />
                                    </StackPanel>

                                    <Button
                                        Grid.Column="2">
                                        <FontIcon FontSize="14" Glyph="&#xE712;" />
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!--  Right Panel - Quick Actions & Recent Activity  -->
            <Border
                Background="White"
                BorderBrush="#E1E1E1"
                BorderThickness="1"
                CornerRadius="12"
                Grid.Column="2"
                Padding="24">
                <StackPanel>
                    <!--  Quick Actions Section  -->
                    <StackPanel Margin="0,0,0,32">
                        <StackPanel Margin="0,0,0,16" Orientation="Horizontal">
                            <FontIcon
                                FontSize="18"
                                Glyph="&#xE8B5;"
                                Margin="0,0,12,0" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Quick Actions" />
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <Button
                                Click="AddSaveButton_Click"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontSize="14" Glyph="&#xE710;" />
                                    <TextBlock Text="Add New Save" />
                                </StackPanel>
                            </Button>

                            <Button
                                Click="InitializeGitButton_Click"
                                HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontSize="14" Glyph="&#xE8A7;" />
                                    <TextBlock Text="Initialize Git" />
                                </StackPanel>
                            </Button>

                            <Button
                                Click="SyncAllButton_Click"
                                HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontSize="14" Glyph="&#xE895;" />
                                    <TextBlock Text="Sync All Saves" />
                                </StackPanel>
                            </Button>

                            <Button
                                Click="BackupButton_Click"
                                HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontSize="14" Glyph="&#xE7B8;" />
                                    <TextBlock Text="Create Backup" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!--  Recent Activity Section  -->
                    <StackPanel>
                        <StackPanel Margin="0,0,0,16" Orientation="Horizontal">
                            <FontIcon
                                FontSize="18"
                                Glyph="&#xE823;"
                                Margin="0,0,12,0" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Recent Activity" />
                        </StackPanel>

                        <StackPanel Spacing="12">
                            <!--  Activity Items  -->
                            <Border
                                Background="#F3F3F3"
                                CornerRadius="6"
                                Padding="12">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="My Survival World" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="Committed changes • 2 hours ago" />
                                </StackPanel>
                            </Border>

                            <Border
                                Background="#F3F3F3"
                                CornerRadius="6"
                                Padding="12">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="Creative Building" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="Added to GitMC • 1 day ago" />
                                </StackPanel>
                            </Border>

                            <Border
                                Background="#F3F3F3"
                                CornerRadius="6"
                                Padding="12">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="System" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="Git configured • 2 days ago" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!--  Loading Panel  -->
        <Grid
            Background="#80000000"
            Grid.RowSpan="2"
            Visibility="Collapsed"
            x:Name="LoadingPanel">
            <Border
                Background="White"
                CornerRadius="8"
                Height="120"
                HorizontalAlignment="Center"
                Padding="24"
                VerticalAlignment="Center"
                Width="300">
                <StackPanel HorizontalAlignment="Center" Spacing="16">
                    <ProgressBar IsIndeterminate="True" x:Name="LoadingProgressRing" />
                    <TextBlock
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Text="Loading..." />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
