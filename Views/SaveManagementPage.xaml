<Page
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    FontFamily="{StaticResource AppFontFamily}"
    UseLayoutRounding="True"
    mc:Ignorable="d"
    x:Class="GitMC.Views.SaveManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converters="using:GitMC.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GitMC.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Resources>
        <converters:LocalizationConverter x:Key="LocalizationConverter" />

        <!--  Save Card GridView Item Style  -->
        <Style TargetType="GridViewItem" x:Key="SaveCardGridViewItemStyle">
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Status Bar  -->
        <Border
            Background="White"
            BorderBrush="#E1E1E1"
            BorderThickness="1"
            CornerRadius="8"
            Grid.Row="0"
            Margin="24,24,24,16"
            Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Title  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Dashboard"
                        VerticalAlignment="Center" />
                </StackPanel>

                <!--  Project Status Stats  -->
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="32">
                    <!--  Total Saves  -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Background="#E3F2FD"
                            CornerRadius="16"
                            Height="32"
                            VerticalAlignment="Center"
                            Width="32">
                            <FontIcon
                                FontSize="16"
                                Foreground="#1976D2"
                                Glyph="&#xE8B7;"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="0"
                                x:Name="TotalSavesCount" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Saves" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Saves with Changes  -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Background="#FFF3E0"
                            CornerRadius="16"
                            Height="32"
                            VerticalAlignment="Center"
                            Width="32">
                            <FontIcon
                                FontSize="16"
                                Foreground="#F57C00"
                                Glyph="&#xE70F;"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="0"
                                x:Name="SavesWithChangesCount" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Changed" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Remote Updates  -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Background="#E8F5E8"
                            CornerRadius="16"
                            Height="32"
                            VerticalAlignment="Center"
                            Width="32">
                            <FontIcon
                                FontSize="16"
                                Foreground="#388E3C"
                                Glyph="&#xE896;"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="0"
                                x:Name="RemoteUpdatesCount" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Updates" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Git Status  -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Background="#F3E5F5"
                            CornerRadius="16"
                            Height="32"
                            VerticalAlignment="Center"
                            Width="32">
                            <FontIcon
                                FontSize="16"
                                Foreground="#7B1FA2"
                                Glyph="&#xE774;"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Ready"
                                x:Name="GitStatusText" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Git Status" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Total Size  -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Background="#FCE4EC"
                            CornerRadius="16"
                            Height="32"
                            VerticalAlignment="Center"
                            Width="32">
                            <FontIcon
                                FontSize="16"
                                Foreground="#C2185B"
                                Glyph="&#xE8B5;"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="0 B"
                                x:Name="TotalSizeText" />
                            <TextBlock
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Total Size" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!--  Add Save Button  -->
                <Button
                    Click="AddSaveButton_Click"
                    Grid.Column="2"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="14" Glyph="&#xE710;" />
                        <TextBlock Text="Add Save" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!--  Main Content Layout  -->
        <Grid Grid.Row="1" Margin="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="320" />
            </Grid.ColumnDefinitions>

            <!--  Left Panel - Your Saves  -->
            <Border
                Background="White"
                BorderBrush="#E1E1E1"
                BorderThickness="1"
                CornerRadius="12"
                Grid.Column="0"
                Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Header with Actions  -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <FontIcon
                                FontSize="18"
                                Glyph="&#xE8B7;"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Your Saves"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button Click="SyncAllButton_Click" ToolTipService.ToolTip="Sync All Saves">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon FontSize="12" Glyph="&#xE895;" />
                                    <TextBlock FontSize="12" Text="Sync All" />
                                </StackPanel>
                            </Button>
                            <Button Click="PushAllButton_Click" ToolTipService.ToolTip="Push All Changes">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon FontSize="12" Glyph="&#xE898;" />
                                    <TextBlock FontSize="12" Text="Push All" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--  Save Count Info  -->
                    <TextBlock
                        FontSize="14"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Grid.Row="1"
                        Margin="0,0,0,16"
                        Text="No saves managed yet"
                        x:Name="SaveCountInfo" />

                    <!--  Saves Grid  -->
                    <ScrollViewer
                        Grid.Row="2"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto">
                        <GridView
                            HorizontalContentAlignment="Stretch"
                            ItemContainerStyle="{StaticResource SaveCardGridViewItemStyle}"
                            SelectionMode="None"
                            x:Name="SavesGridView">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!--  Right Sidebar - Quick Actions & Recent Activity  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Quick Actions Panel  -->
                <Border
                    Background="White"
                    BorderBrush="#E1E1E1"
                    BorderThickness="1"
                    CornerRadius="12"
                    Grid.Row="0"
                    Padding="20">
                    <StackPanel>
                        <!--  Quick Actions Header  -->
                        <StackPanel Margin="0,0,0,16" Orientation="Horizontal">
                            <FontIcon
                                FontSize="16"
                                Glyph="&#xE945;"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Quick Actions"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <!--  Action Buttons  -->
                        <StackPanel Spacing="8">
                            <Button
                                Click="CommitAllButton_Click"
                                Height="60"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="12,0,0,0"
                                x:Name="CommitAllButton">
                                <StackPanel
                                    HorizontalAlignment="Left"
                                    Margin="16,0,12,0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                                    <FontIcon
                                        FontSize="16"
                                        Glyph="&#xE8A7;"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center" />
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="Commit All Changes" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Margin="0,2,0,0"
                                            Text="Save current changes to Git" />
                                    </StackPanel>
                                </StackPanel>
                            </Button>

                            <Button
                                Click="FetchAllButton_Click"
                                Height="60"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="12,0,0,0"
                                x:Name="FetchAllButton">
                                <StackPanel
                                    HorizontalAlignment="Left"
                                    Margin="16,0,12,0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                                    <FontIcon
                                        FontSize="16"
                                        Glyph="&#xE895;"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center" />
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="Fetch All Changes" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Margin="0,2,0,0"
                                            Text="Check updates from remote repo" />
                                    </StackPanel>
                                </StackPanel>
                            </Button>

                            <Button
                                Click="PullAllButton_Click"
                                Height="60"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="12,0,0,0"
                                x:Name="PullAllButton">
                                <Grid>
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        Margin="16,0,12,0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                        <FontIcon
                                            FontSize="16"
                                            Glyph="&#xE896;"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Text="Pull All Changes" />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Margin="0,2,0,0"
                                                Text="Apply updates from remote repo" />
                                        </StackPanel>
                                    </StackPanel>
                                    <Border
                                        Background="#FF6B6B"
                                        CornerRadius="10"
                                        Height="20"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,16,0"
                                        MinWidth="20"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"
                                        x:Name="PullBadge">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="White"
                                            HorizontalAlignment="Center"
                                            Text="0"
                                            VerticalAlignment="Center"
                                            x:Name="PullBadgeText" />
                                    </Border>
                                </Grid>
                            </Button>

                            <Button
                                Click="PushAllButton_Click"
                                Height="60"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="12,0,0,0"
                                x:Name="PushAllButtonSidebar">
                                <Grid>
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        Margin="16,0,12,0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                        <FontIcon
                                            FontSize="16"
                                            Glyph="&#xE898;"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Text="Push All Changes" />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Margin="0,2,0,0"
                                                Text="Upload local commits to remote" />
                                        </StackPanel>
                                    </StackPanel>
                                    <Border
                                        Background="#4CAF50"
                                        CornerRadius="10"
                                        Height="20"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,16,0"
                                        MinWidth="20"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"
                                        x:Name="PushBadge">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="White"
                                            HorizontalAlignment="Center"
                                            Text="0"
                                            VerticalAlignment="Center"
                                            x:Name="PushBadgeText" />
                                    </Border>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Recent Activity Panel  -->
                <Border
                    Background="White"
                    BorderBrush="#E1E1E1"
                    BorderThickness="1"
                    CornerRadius="12"
                    Grid.Row="2"
                    Padding="20">
                    <StackPanel>
                        <!--  Recent Activity Header  -->
                        <StackPanel Margin="0,0,0,16" Orientation="Horizontal">
                            <FontIcon
                                FontSize="16"
                                Glyph="&#xE823;"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Recent Activity"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <!--  Activity List  -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="10" x:Name="RecentActivityContainer">
                                <!--  Activity items will be populated dynamically  -->
                                <TextBlock
                                    FontSize="13"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0"
                                    Text="No recent activity"
                                    x:Name="NoActivityText" />
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!--  Loading Panel  -->
        <Grid
            Background="#80000000"
            Grid.RowSpan="2"
            Visibility="Collapsed"
            x:Name="LoadingPanel">
            <Border
                Background="White"
                CornerRadius="8"
                Height="120"
                HorizontalAlignment="Center"
                Padding="24"
                VerticalAlignment="Center"
                Width="300">
                <StackPanel HorizontalAlignment="Center" Spacing="16">
                    <ProgressBar IsIndeterminate="True" x:Name="LoadingProgressRing" />
                    <TextBlock
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Text="Loading..." />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
